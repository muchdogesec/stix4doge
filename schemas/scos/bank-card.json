{
	"$id": "https://raw.githubusercontent.com/muchdogesec/stix4doge/main/schemas/scos/bank-card.json",
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "bank-account",
	"description": "This extension creates a new SCO that can be used to represent bank cards.",
	"type": "object",
	"allOf": [
		{
			"$ref": "https://github.com/oasis-open/cti-stix2-json-schemas/blob/master/schemas/common/cyber-observable-core.json"
		},
		{
			"properties": {
				"type": {
					"type": "string",
					"description": "The value of this property MUST be `bank-card`.",
					"enum": [
						"bank-card"
					]
				},
				"id": {
					"title": "id",
					"pattern": "^bank-card--"
				},
				"bank": {
					"type": "string",
					"description": "Name of the bank account the manages the account."
				},
				"format": {
					"type": "string",
					"description": "The type of card.",
					"enum": [
						"credit",
						"debit",
						"prepaid"
					]
				},
				"number": {
					"type": "string",
					"description": "Full card number"
				},
				"scheme": {
					"type": "string",
					"description": "Full card number",
					"enum": [
						"mastercard",
						"visa",
						"diners_club",
						"american_express",
						"discover",
						"union_pay",
						"jcb"
					]
				},
				"issuer_name": {
					"type": "string",
					"description": "The name of the provider who issued the card. Usually a bank."
				},
				"issuer_country": {
					"type": "string",
					"description": "The ISO 3 digit code for the country of issue."
				},
				"holder_name": {
					"type": "string",
					"description": "The name on the card."
				},
				"valid_from": {
					"type": "string",
					"description": "The valid from date on the card in the format MM/YY."
				},
				"valid_to": {
					"type": "string",
					"description": "The valid to date on the card in the format MM/YY."
				},
				"security_code": {
					"type": "string",
					"description": "The cards security code. Usually 3 or 4 digits."
				},
				"extensions": {
					"type": "object",
					"properties": {
						"extension-definition--7922f91a-ee77-58a5-8217-321ce6a2d6e0": {
							"type": "object",
							"properties": {
            					"extension_type": {
									"enum": [
										"new-sco"
									]
            					}
							},
							"required": ["new-sco"]
						},
					"required": ["extension-definition--7922f91a-ee77-58a5-8217-321ce6a2d6e0"]
					}
				}
			}
		}
	],
	"required": [
		"type",
		"id",
		"extensions"
  	]
}